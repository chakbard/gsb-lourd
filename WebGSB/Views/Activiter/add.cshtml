@model WebGSB.Models.Metier.ActiviteCompl

@{
    ViewBag.Title = "Ajouter une Activité";
    Layout = "~/Views/Shared/_LayoutGSB.cshtml";
}

<div class="container">
    <h1>Ajouter une Activité</h1>
    <form method="post" asp-action="Ajouter" asp-controller="Activiter">      
        <div class="form-group">
            <label for="dateActivite">Date Activité:</label>
            <input type="date" id="dateActivite" name="dateActivite" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="lieuActivite">Lieu Activité:</label>
            <input type="text" id="lieuActivite" name="lieuActivite" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="themeActivite">Thème Activité:</label>
            <input type="text" id="themeActivite" name="themeActivite" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="motifActivite">Motif Activité:</label>
            <textarea id="motifActivite" name="motifActivite" class="form-control" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </form>
</div>
