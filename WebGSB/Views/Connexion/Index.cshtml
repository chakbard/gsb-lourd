@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_LayoutGSB.cshtml";
}

<style>
    /* Centre le formulaire dans la page */
    .login-form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Utilise la hauteur de la fenêtre */
    }

    .login-form {
        width: 100%;
        max-width: 400px; /* Largeur maximale du formulaire */
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Style des éléments du formulaire */
    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: .25rem;
    }

    /* Centre les boutons dans leur conteneur */
    .form-group-buttons {
        display: flex;
        justify-content: center; /* Centre les boutons horizontalement */
        gap: 10px; /* Espacement entre les boutons */
    }

    .btn-success, .btn-primary {
        color: #fff;
        padding: .375rem .75rem;
        border-radius: .25rem;
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
</style>

<div class="login-form-container">
    <form asp-controller="Connexion" asp-action="Index" class="login-form" method="post">
        <div class="form-horizontal">
            <h1>Connexion</h1>
            <hr />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@modelError.ErrorMessage</p>
                    }
                </div>
            }
            <div class="form-group">
                <label for="login">Identifiant</label>
                <input type="text" id="login" name="login" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pwd">Mot de passe</label>
                <input type="password" id="pwd" name="pwd" class="form-control" />
            </div>
            <div class="form-group form-group-buttons">
                <input type="submit" value="Se Connecter" class="btn btn-success" />
                @Html.ActionLink("Retourner", "Index", "Home", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </form>
</div>